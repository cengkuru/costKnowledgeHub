rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
        request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return isAuthenticated() &&
        request.auth.uid == userId;
    }

    // Resources collection
    match /resources/{resourceId} {
      // Read rules:
      // - All users (authenticated and unauthenticated) can read resources
      // - This is a public knowledge hub, so all resources should be accessible
      allow read: if true;

      // Only admins can create, update, or delete resources
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Analytics collections - write-only for all users, read for admins
    match /analytics_page_views/{document} {
      allow read: if isAdmin();
      allow create: if true;
    }

    match /analytics_downloads/{document} {
      allow read: if isAdmin();
      allow create: if true;
    }

    match /analytics_searches/{document} {
      allow read: if isAdmin();
      allow create: if true;
    }

    match /analytics_filters/{document} {
      allow read: if isAdmin();
      allow create: if true;
    }

    match /analytics_shares/{document} {
      allow read: if isAdmin();
      allow create: if true;
    }

    // User profiles (if needed in future)
    match /users/{userId} {
      // Temporarily allow all authenticated users to read users for testing
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Admin collection for storing admin-specific data
    match /admin/{document} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Settings collection
    match /settings/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if isOwner(resource.data.userId);

      // Only the notification service (via Cloud Functions) can create notifications
      // Users can update (mark as read) and delete their own notifications
      allow update: if isOwner(resource.data.userId) &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);
      allow delete: if isOwner(resource.data.userId);

      // Notifications can be created by authenticated users (for system notifications)
      allow create: if isAuthenticated();
    }

    // Notification preferences
    match /notification_preferences/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Activities collection (for audit trail)
    match /activities/{activityId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update: if false; // Activities should be immutable
      allow delete: if false; // Activities should never be deleted
    }
  }
}
